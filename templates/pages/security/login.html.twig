{% extends "base.html.twig" %}

{% block title %}
	[yummy]Recipe - Login
{% endblock %}

{% block body %}
	<div class='container'>
		<h1 class='mt-4'>Login</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-success mt-4">
				{{ message }}
			</div>
		{% endfor  %}

		{% if error %}
			<div class="alert alert-danger mt-4">
				{{ error.messagekey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		<form action="{{ path('app_security.login') }}" method="POST">
			<div class="form-group">
				<label for="username" class="form-label mt-4">Email address</label>
				<input type="email" class="form-control" id="username" name="_username" placeholder="exemple@yummyrecipe.com" value="" {{ lastUsername }}>
				<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Password</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="********" autocomplete="off">
			</div>
			<button type="submit" class="btn btn-primary mt-4">
				Ok!
			</button>
		</form>
	</div>
{% endblock %}

